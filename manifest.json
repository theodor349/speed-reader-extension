{
  "manifest_version": 2,
  "name": "Speed Reader",
  "version": "1.0",
  "description": "RSVP speed reading - display words one at a time",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Speed Reader"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
